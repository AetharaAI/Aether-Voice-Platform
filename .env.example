# GPU Configuration
CUDA_VISIBLE_DEVICES=1
GPU_DEVICE_ID=1

# Model Paths (mounted from host)

# ONE canonical mount point on the host
MODEL_BASE_PATH=/mnt/aetherpro-extra1/models/llm/qwen3

# Everything else is RELATIVE to /models inside the container
ASR_MODEL_PATH=/models/Qwen3-ASR-1.7B
TTS_MODEL_PATH=/models/Qwen3-TTS-12Hz-0.6B-Base
TTS_TOKENIZER_PATH=/models/Qwen3-TTS-Tokenizer-12Hz
OMNI_MODEL_PATH=/models/Qwen3-Omni-30B-A3B-Instruct-AWQ-4bit

# Service Ports
ASR_PORT=8001
TTS_PORT=8002
OMNI_PORT=8003
GATEWAY_PORT=8004
REDIS_PORT=6379

# vLLM Configuration
VLLM_WORKERS=1
VLLM_MAX_MODEL_LEN=32768
VLLM_GPU_MEMORY_UTILIZATION=0.85
VLLM_DISABLE_V1=1

# Gateway Configuration
LOG_LEVEL=info
CORS_ORIGINS=http://localhost:3000,http://localhost:16382
SESSION_TTL=3600

# TTS Specific
TTS_MAX_AUDIO_LENGTH=30
TTS_DEFAULT_VOICE=Vivian
