# GPU Configuration
CUDA_VISIBLE_DEVICES=1
GPU_DEVICE_ID=1

# Model Paths (mounted from host)
MODEL_BASE_PATH=/mnt/aetherpro-extra1/models/llm/qwen3
ASR_MODEL_PATH=/models/Qwen3-ASR-1.7B
TTS_MODEL_PATH=/models/Qwen3-TTS-12Hz-0.6B-Base
TTS_TOKENIZER_PATH=/models/Qwen3-TTS-Tokenizer-12Hz
OMNI_MODEL_PATH=/models/Qwen3-Omni-30B-A3B-Instruct-AWQ-4bit

# Service Ports (8003 and 8004 are available and proxied)
# Internal service ports - these are what the services listen on inside containers
ASR_PORT=8001
TTS_PORT=8002
OMNI_PORT=8003
GATEWAY_PORT=8004

# External exposed ports (what's mapped to host)
# Only Gateway (8004) and Omni (8003) are exposed externally
EXPOSED_ASR_PORT=18001
EXPOSED_TTS_PORT=18002
EXPOSED_OMNI_PORT=8003
EXPOSED_GATEWAY_PORT=8004

# Redis - Using existing external Redis Stack on port 6390
# The gateway connects to host.docker.internal:6390
USE_BUILTIN_REDIS=false
REDIS_HOST=host.docker.internal
REDIS_PORT=6390
REDIS_URL=redis://host.docker.internal:6390/0

# vLLM Configuration
VLLM_WORKERS=1
VLLM_MAX_MODEL_LEN=32768
VLLM_GPU_MEMORY_UTILIZATION=0.85
VLLM_DISABLE_V1=1

# Gateway Configuration
LOG_LEVEL=info
CORS_ORIGINS=http://localhost:3000,http://localhost:16382
SESSION_TTL=3600

# TTS Specific
TTS_MAX_AUDIO_LENGTH=30
TTS_DEFAULT_VOICE=Vivian
